static void
setup(void)
{
    NAMESPACE_USER_PREFIX = rb_str_new_cstr("user.");
    NAMESPACE_SYSTEM_PREFIX = rb_str_new_cstr("system.");

    rb_gc_register_mark_object(NAMESPACE_USER_PREFIX);
    rb_gc_register_mark_object(NAMESPACE_SYSTEM_PREFIX);
}
